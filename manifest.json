{
  "name": "auto-redirect",
  "description": "Open pages in current tab instead of new tab on specific domains",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["src/content-script.js"]
    }
  ],
  "action": {
    "default_popup": "ui/popup.html"
  }
}