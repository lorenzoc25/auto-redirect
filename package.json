{
  "name": "chrome-extension-typescript-starter",
  "version": "1.0.0",
  "description": "chrome-extension-typescript-starter",
  "main": "index.js",
  "scripts": {
    "watch:src": "webpack --config webpack/webpack.dev.js --watch",
    "watch:ui": "tailwindcss -i ./ui/tailwind.css -o ./ui/index.css --watch",
    "watch": "concurrently 'yarn watch:src' 'yarn watch:ui'",
    "build": "webpack --config webpack/webpack.prod.js",
    "clean": "rimraf dist",
    "test": "jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "Lorenzo Cao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lorenzoc25/auto-redirect"
  },
  "dependencies": {
    "rc-input": "^0.0.1-alpha.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.158",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "concurrently": "^7.2.1",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.7.1",
    "eslint": "^8.16.0",
    "eslint-plugin-react": "^7.30.0",
    "glob": "^7.1.6",
    "jest": "^27.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2 ",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.0.5",
    "ts-loader": "^8.0.0",
    "typescript": "^4.4.3 ",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.0.0"
  }
}
